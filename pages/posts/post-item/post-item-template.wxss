.post-container{
    width:100%;
    height:100%;
    margin-top:20rpx;
    margin-left: 0rpx;
    background-color:#fff;
    border-bottom: 1px solid #ededed;
    padding-bottom: 5px;
    position: relative;
}

.post-author-date{
    margin-top:10rpx;
    margin-bottom: 20rpx;
}

.post-author{
    width:60rpx;
    height:60rpx;
    vertical-align: middle;
}

.post-date{
    margin-left: 20px;
    vertical-align: middle;
}

.post-image{
    width:160rpx;
    height:153rpx;
    float: left;
    margin-bottom: 15px;
    position:absolute;
    top:50%;
    left:0%;
    border-radius: 5px;
    -webkit-transform: translate(20%,-60%);
    -moz-transform: translate(20%,-60%);
    transform:translate(20%,-60%);
}
.post-content{
    float: right;
    width:70%;
    color:#666;
    font-size:28rpx;
    margin-bottom:20rpx;
    margin-left: 20rpx;
    letter-spacing:2rpx;
    line-height: 40rpx;
}
.post-address{
  font-size:26rpx;
  margin-bottom: 10px;
}
.post-date{
    font-size:26rpx;
    margin-bottom: 10px;
}
.post-title{
    display: block;
    font-size:34rpx;
    font-weight: 600;
    color:#333;
}
.clearboth{
  clear: both;
}
.post-like{
    font-size:13px;
    line-height: 16px;
    margin-left: 10px;
}

.post-like-image{
    height:16px;
    width:16px;
    margin-right: 8px;
    vertical-align:middle;
}

.post-like-font{
    vertical-align:middle;
    margin-right: 20px;
}
